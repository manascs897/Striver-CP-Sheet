#include <bits/stdc++.h>
using namespace std;

bool canMakePalindrome(string s) {
    int l = 0, r = s.size() - 1;

    while (l < r) {
        int diff = abs(s[l] - s[r]);

        if (diff != 0 && diff != 2) {
            return false;
        }
        l++;
        r--;
    }
    return true;
}

int main() {

    int T;
    cin >> T;

    while (T-- > 0) {
        int n;
        cin >> n;

        string s;
        cin >> s;

        if (canMakePalindrome(s))
            cout << "YES\n";
        else
            cout << "NO\n";
    }

    return 0;
}
